{
    "name": "php-monsters/larawallet",
    "description": "Iranian wallet gateways handler for laravel based applications",
    "keywords": [
        "payment",
        "wallet",
        "iran",
        "asanpardakht"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Maryam Nabiyan",
            "email": "maryam.nbyn@gmail.com"
        },
        {
            "name": "Aboozar Ghaffari",
            "email": "aboozar.ghf@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-simplexml": "*",
        "ext-soap": "*",
        "ext-xml": "*",
        "ext-bcmath": "*",
        "illuminate/support": ">=8.0",
        "illuminate/view": ">=8.0",
        "tartan/laravel-xlog": "^1.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload-dev": {
    },
    "autoload": {
        "psr-4": {
            "PhpMonsters\\LaraWallet\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
